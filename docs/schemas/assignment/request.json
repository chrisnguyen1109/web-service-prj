{
    "type": "object",
    "required": ["patient", "doctor", "assignmentTime"],
    "properties": {
        "patient": {
            "type": "string",
            "format": "uuid"
        },
        "doctor": {
            "type": "string",
            "format": "uuid"
        },
        "notes": {
            "type": "string"
        },
        "status": {
            "type": "string",
            "enum": ["pending", "completed"],
            "default": "pending"
        },
        "assignmentTime": {
            "type": "object",
            "properties": {
                "date": {
                    "type": "string",
                    "format": "date"
                },
                "time": {
                    "type": "string"
                }
            }
        }
    },
    "example": {
        "patient": "6277ec1d00c9fbcb3a8bb81a",
        "doctor": "6277eef600c9fbcb3a8bb824",
        "notes": "test notes",
        "status": "pending",
        "assignmentTime": {
            "date": "2022-06-13T00:00:00.000Z",
            "time": "13:00"
        }
    }
}
