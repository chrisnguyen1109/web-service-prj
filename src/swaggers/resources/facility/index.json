{
    "get": {
        "summary": "Return a list of the facilities",
        "tags": ["Facility"],
        "responses": {
            "200": {
                "description": "A list of the facilities",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "../../schemas/facility.json"
                            }
                        }
                    }
                }
            },
            "500": {
                "$ref": "../../responses/unexpected-error.json"
            }
        }
    },
    "post": {
        "summary": "Create new facility",
        "tags": ["Facility"],
        "requestBody": {
            "required": true
        },
        "responses": {
            "201": {
                "description": "A facility after creation",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "../../schemas/facility.json"
                        }
                    }
                }
            },
            "500": {
                "$ref": "../../responses/unexpected-error.json"
            }
        }
    }
}
